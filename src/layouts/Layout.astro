---
import Navigation from '../components/Navigation.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Kyle.Krny</title>

		<meta name="description" content="I help businesses launch and scale web applications with React, Firebase, and modern web technologies." />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="author" content="Kyle Krny">
		<meta name="robots" content="index, follow">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:title" content="Kyle Krny – Frontend Developer & MVP Builder">
		<meta property="og:description" content="I help businesses launch and scale web applications with React, Firebase, and modern web technologies.">
		<meta property="og:image" content="https://kylekrny.com/og-image.jpg"> <!-- Update with actual image URL -->
		<meta property="og:url" content="https://kylekrny.com">

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Kyle Krny – Frontend Developer & MVP Builder">
		<meta name="twitter:description" content="I help businesses launch and scale web applications with React, Firebase, and modern web technologies.">
		<meta name="twitter:image" content="https://kylekrny.com/og-image.jpg">
	</head>
	<body class="font-sans antialiased bg-neutral-100">
		<Navigation />
		<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
