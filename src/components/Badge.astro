---

const { color, label } = Astro.props;

const badgeClass = `inline-flex items-center gap-x-1.5 rounded-md bg-${color}-100 px-3 py-2 text-xs font-medium text-${color}-700`;
const svgClass = `size-1.5 fill-${color}-500`;
---

<span class={badgeClass}>
  <svg class={svgClass} viewBox="0 0 6 6" aria-hidden="true">
    <circle cx="3" cy="3" r="3" />
  </svg>
    {label}
</span>